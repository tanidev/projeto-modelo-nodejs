<body>

  <h1><center>Criar novo contato<center></h1>
  <hr/>
  <form class="form-horizontal" action="/contatos/create" method="post">
    <div class="form-group">
      <label for="nome" class="control-label col-sm-2">Nome</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome do contato" autofocus required>
      </div>
    </div>
    <div class="form-group">
      <label for="email" class="control-label col-sm-2">E-mail</label>
      <div class="col-sm-10">
        <input type="email" class="form-control" id="email" name="email" placeholder="examplo@exemplo.com" required>
      </div>
    </div>
    <div class="form-group">
      <label for="aniversario" class="control-label col-sm-2">Data de anivers√°rio</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="aniversario" name="aniversario" placeholder="dd/mm/aaaa" required>
      </div>
    </div>
    <div class="form-group">
      <label for="telefonefixo" class="control-label col-sm-2">Telefone fixo</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="telefonefixo" name="telefonefixo" placeholder="11 2222-2222" required>
      </div>
    </div>
    <div class="form-group">
      <label for="telefonecelular" class="control-label col-sm-2">Telefone celular</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="telefonecelular" name="telefonecelular" placeholder="11 99999-9999">
      </div>
    </div>
    <div class="form-group">
      <label for="telefonecomercial" class="control-label col-sm-2">Telefone comercial</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="telefonecomercial" name="telefonecomercial" placeholder="11 99999-9999">
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2"></div>
      <div class="col-sm-10">
        <button type="submit" class="btn btn-success">
          <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          Criar contato</button>
        <a href="/" class="btn btn-danger">
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          Cancelar</a>
      </div>
    </div>
  </form>
</body>

<!-- FIX Dynamic Layout -->
{{#extend 'scripts'}}
{{/extend}}
