<body>

  <h1><center>Criar novo contato<center></h1>
  <hr/>
  <form class="form-horizontal" action="/contatos/create" method="post">
    <div class="form-group">
      <label for="nome" class="control-label col-sm-2">Nome</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="nome" name="nome"
          placeholder="Nome do contato" autofocus required>
          {{#if errors.nome}}
            <div class="alert alert-warning" role="alert">{{errors.nome.msg}}</div>
          {{/if}}
      </div>
    </div>
    <div class="form-group">
      <label for="email" class="control-label col-sm-2">E-mail</label>
      <div class="col-sm-10">
        <input type="email" class="form-control" id="email" name="email"
          placeholder="examplo@exemplo.com" required>
          {{#if errors.email}}
            <div class="alert alert-warning" role="alert">{{errors.email.msg}}</div>
          {{/if}}
      </div>
    </div>
    <div class="form-group">
      <label for="aniversario" class="control-label col-sm-2">Data de anivers√°rio</label>
      <div class="col-sm-10">
        <input type="text" class="form-control aniversario" id="aniversario" name="aniversario"
          placeholder="dd/mm/aaaa" required>
          {{#if errors.aniversario}}
            <div class="alert alert-warning" role="alert">{{errors.aniversario.msg}}</div>
          {{/if}}
      </div>
    </div>
    <div class="form-group">
      <label for="telefonefixo" class="control-label col-sm-2">Telefone fixo</label>
      <div class="col-sm-10">
        <input type="text" class="form-control telefonefixo" id="telefonefixo" name="telefonefixo"
          placeholder="(11) 2222-2222" required>
      </div>
    </div>
    <div class="form-group">
      <label for="telefonecelular" class="control-label col-sm-2">Telefone celular</label>
      <div class="col-sm-10">
        <input type="text" class="form-control telefonecelular" id="telefonecelular" name="telefonecelular"
          placeholder="(11) 99999-9999">
      </div>
    </div>
    <div class="form-group">
      <label for="telefonecomercial" class="control-label col-sm-2">Telefone comercial</label>
      <div class="col-sm-10">
        <input type="text" class="form-control telefonecomercial" id="telefonecomercial"
          name="telefonecomercial" placeholder="(11) 99999-9999">
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2"></div>
      <div class="col-sm-10">
        <button type="submit" class="btn btn-success">
          <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          Criar contato</button>
        <a href="/" class="btn btn-danger">
          <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          Cancelar</a>
      </div>
    </div>
  </form>
</body>

<!-- FIX Dynamic Layout -->
{{#extend 'scripts'}}
  <script src="/js/jquery.mask.min.js"></script>
  <script>
    $(function() {
      var SPMaskBehavior = function (val) {
        return val.replace(/\D/g, '').length === 11 ? '(00) 00000-0000' : '(00) 0000-00009';
      },
      spOptions = {
        onKeyPress: function(val, e, field, options) {
            field.mask(SPMaskBehavior.apply({}, arguments), options);
          }
      };

      $('.aniversario').mask('00/00/0000');
      $('.telefonefixo').mask('(00) 0000-0000');
      $('.telefonecelular').mask(SPMaskBehavior, spOptions);
      $('.telefonecomercial').mask(SPMaskBehavior, spOptions);
    });
  </script>
{{/extend}}
